# for colors
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5%dm:AF=\E[38;5%dm'
defbce "on"

# misc
startup_message off
defscrollback 10000

# status line
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kg}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'
